{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es5", "es6", "esnext.asynciterable"],
    "jsx": "react",
    "sourceMap": false,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "outDir": ".tsc",
    "esModuleInterop": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}